<h2 class="makeBlue">Upcoming Gigs in <%= location %>:</h2>

<div class="items">
    <% for (let gig of gigs) { %>
        <div class="item_preview">
            <section class="image_caption">
                <img src="<%= gig.image_url %>" alt="">
            </section>
            <div class="add_margin">
                <p><a href="/gigs/<%= gig.gig_id %>"><%= gig.title %></a></p>
            </div>
            <section class="details add_margin">
                <span><%= gig.artist %></span>
                <span><%= gig.city %></span>
                <span><%= gig.date %></span>
            </section>
        </div>

    <% } %>
</div>