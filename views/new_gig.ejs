<h2 class="makeBlue">Details Of Your Gig</h2>
<section class="new_gig">
    <form action="/gigs" method="post">
        <fieldset>
            <p><label for="">Title:</label>
            <input type="text" name="title"></span></p>
            <p><label for="">Performing Artist:</label>
            <input type="text" name="artist"></p>
            <p><label for="">Description:</label>
            <textarea name="description" id="description" rows="5" cols="50"></textarea></p>
            <p><label for="">Keywords:</label>
            <input type="text" name="keywords" placeholder="Enter keywords via format: keyword1, keyword2...."></p>
            <input type="hidden" name="posted_by" value="<%= currentUser.username %>">
            <p><label for="">City</label><input type="text" name="city">
            <p><label for="">Image Url:</label>
            <input type="text" name="image_url"></p>
            <p><label for="">Address:</label>
            <input type="text" name="address"></p>
            <p><label for="">Date:</label>
            <input type="text" name="date"></p>
        </fieldset>
        <button>submit</button>
    </form>
</section>